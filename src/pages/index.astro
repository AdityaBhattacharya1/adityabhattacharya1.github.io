---
import Menu from '../components/interface/Menu'
import Header from '../components/Header.astro'
import Button from '../components/interface/Button'
import AboutSection from '../components/about/About.astro'
import ProjectSection from '../components/projects/ProjectSection.astro'
import SkillSection from '../components/skills/SkillSection.astro'
import EducationSection from '../components/education/EducationSection.astro'
import ProfessionalExperienceSection from '../components/profession/ProfessionalExperienceSection.astro'
import ContactSection from '../components/contact/ContactSection'
---

<html lang="en">
	<head>
		<Header
			title="Aditya Bhattacharya | Portfolio Website"
			description="Portfolio website for Aditya Bhattacharya, a software developer and UI/UX Designer"
			previewImage="/hero-preview.png"
			url="https://adityabh.is-a.dev"
		/>
		<style is:global>
			@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');
			@import url('https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap');

			* {
				font-family: 'Poppins', sans-serif;
				padding: 0;
				margin: 0;
				box-sizing: border-box;
				scroll-behavior: smooth;
				position: relative;
				outline: 1px solid rgba(235, 239, 19, 0.08);
			}

			*:focus {
				outline: 2px solid;
			}

			body {
				background-color: -webkit-linear-gradient(#eee, #333);
				color: #ebef13d4;
				/* changing opacity of bg img */
				background-image: linear-gradient(
						rgba(0, 8, 33, 0.9),
						rgba(0, 8, 33, 0.9)
					),
					url('/topography.svg');
				font-family: 'Poppins', sans-serif;
			}
		</style>
		<style>
			.hero,
			.section-headers {
				margin-left: 1rem;
			}

			.header {
				position: relative;
				overflow: hidden;
				min-height: 45rem;
				padding-top: 2rem;
				font-weight: 400;
			}

			.header:after {
				content: '';
				position: absolute;
				width: 100vw;
				height: 100%;
				top: 0;
				right: 0;
				z-index: -1;
				background: url('/Taieri.svg') 100% 0 no-repeat;
			}

			.header-txt {
				font-size: 7rem;
			}

			.header-txt:not(:first-child) {
				width: 40%;
			}

			.section-headers {
				text-decoration: underline #ebef13 2px;
				text-underline-offset: 10px;
			}

			.section-headers:not(:first-child) {
				padding-top: 5rem;
			}

			.btn-container {
				display: flex;
				flex-direction: row;
				padding: 1rem 0;
			}

			/* tablet specific media */
			@media only screen and (max-width: 90rem) {
				.header:after {
					background:
						linear-gradient(
							to bottom right,
							rgba(0, 8, 33, 1),
							rgba(0, 8, 33, 0.5)
						),
						url('/Taieri.svg') 100% 0 no-repeat;
					background-position: top right;
				}
			}

			@media only screen and (max-width: 40rem) {
				.header-txt {
					font-size: 3.5rem;
					padding: 1rem 0;
					margin: none;
				}

				#lastname {
					display: none;
				}

				.section-headers {
					font-size: 3.5rem;
				}

				.header {
					min-height: 55vh;
				}
			}

			@media only screen and (max-width: 27rem) {
				.header-txt,
				.section-headers {
					font-size: 3rem;
				}

				.hero-title {
					font-size: 4.5rem;
				}

				.skill-section {
					display: none;
				}
			}

			@media only screen and (min-width: 1024px) {
				.header {
					min-height: 45rem;
				}
			}
		</style>
		<script>
			const contactDirectBtn = document.querySelector(
				'#contact-direct-btn'
			)
			const blogDirectBtn = document.querySelector('#blog-direct-btn')
			const BLOG_PAGE_LINK = 'https://blogs.adityabh.is-a.dev'

			contactDirectBtn?.addEventListener(
				'click',
				() => (window.location.href = '#contact')
			)
			blogDirectBtn?.addEventListener(
				'click',
				() => (window.location.href = BLOG_PAGE_LINK)
			)
		</script>
	</head>
	<body>
		<Menu />
		<header class="header">
			<div class="hero">
				<h3 style="font-weight: 300">hi there, i&apos;m</h3>
				<h1 class="header-txt hero-title">
					Aditya <span id="lastname">Bhattacharya</span>
				</h1>
				<h2 style="font-weight: 300">
					Software Developer | UI/UX Designer
				</h2>
				<div class="btn-container">
					<Button
						text="Say Hi"
						className="hero-btn"
						id="contact-direct-btn"
						type="button"
						client:load
					/>
					<Button
						text="Blogs"
						className="hero-btn"
						id="blog-direct-btn"
						type="button"
						client:load
					/>
				</div>
			</div>
		</header>
		<main>
			<h1 class="header-txt section-headers" id="about" tabindex={0}>
				About Me
			</h1>
			<AboutSection />
			<h1 class="header-txt section-headers" id="experience" tabindex={0}>
				Experience
			</h1>
			<ProfessionalExperienceSection />
			<h1 class="header-txt section-headers" id="projects" tabindex={0}>
				Projects
			</h1>
			<ProjectSection />
			<div class="skill-section">
				<h1 class="header-txt section-headers" id="skills" tabindex={0}>
					Skills
				</h1>
				<SkillSection />
			</div>

			<h1 class="header-txt section-headers" id="education" tabindex={0}>
				Education
			</h1>
			<EducationSection />
			<ContactSection client:visible />
		</main>
	</body>
</html>
